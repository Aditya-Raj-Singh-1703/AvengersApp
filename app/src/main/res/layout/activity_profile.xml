<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:background="#212121" xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/tony_stark_new"
        android:layout_margin="15dp"
        android:id="@+id/imgTony"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/name"
        android:text="Tony Stark"
        android:textSize="18sp"
        android:layout_toRightOf="@id/imgTony"
        android:layout_margin="15dp"
        android:textStyle="bold"
        android:textColor="#eceff1"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/email"
        android:text="tony@stark.com"
        android:layout_toRightOf="@id/imgTony"
        android:layout_below="@id/name"
        android:textStyle="bold"
        android:layout_margin="15dp"
        android:textColor="#eceff1"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/phoneNumber"
        android:text="+91 1983819382"
        android:layout_toRightOf="@id/imgTony"
        android:layout_below="@id/email"
        android:layout_margin="15dp"
        android:textStyle="bold"
        android:textColor="#eceff1"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#3f51b5"
        android:text="More Information"
        android:textColor="#fafafa"
        android:layout_below="@id/imgTony"
        android:layout_margin="15dp"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Exit App"
        android:background="#d50000"
        android:textColor="#fafafa"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>